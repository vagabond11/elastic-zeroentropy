# ==============================================================================
# ZeroEntropy API Configuration
# ==============================================================================

# Required: Your ZeroEntropy API key
# Get your API key from: https://docs.zeroentropy.dev/
ZEROENTROPY_API_KEY=your_zeroentropy_api_key_here

# Optional: ZeroEntropy API base URL (default: https://api.zeroentropy.dev/v1)
ZEROENTROPY_BASE_URL=https://api.zeroentropy.dev/v1

# Optional: Default ZeroEntropy model to use (default: zerank-1)
# Available models: zerank-1, zerank-1-small
ZEROENTROPY_MODEL=zerank-1

# Optional: Request timeout for ZeroEntropy API calls in seconds (default: 30.0)
ZEROENTROPY_TIMEOUT=30.0

# Optional: Maximum number of retry attempts for ZeroEntropy API calls (default: 3)
ZEROENTROPY_MAX_RETRIES=3

# Optional: Base delay between retries in seconds (default: 1.0)
ZEROENTROPY_RETRY_DELAY=1.0

# ==============================================================================
# Elasticsearch Configuration
# ==============================================================================

# Optional: Elasticsearch URL (default: http://localhost:9200)
ELASTICSEARCH_URL=http://localhost:9200

# Optional: Elasticsearch authentication (use either username/password OR API key)
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_API_KEY=

# Optional: Whether to verify SSL certificates for Elasticsearch (default: true)
ELASTICSEARCH_VERIFY_CERTS=true

# Optional: Request timeout for Elasticsearch operations in seconds (default: 30.0)
ELASTICSEARCH_TIMEOUT=30.0

# Optional: Maximum number of retry attempts for Elasticsearch operations (default: 3)
ELASTICSEARCH_MAX_RETRIES=3

# ==============================================================================
# Default Search Configuration
# ==============================================================================

# Optional: Default number of documents to retrieve from Elasticsearch (default: 100)
DEFAULT_TOP_K_INITIAL=100

# Optional: Default number of documents to send for reranking (default: 20)
DEFAULT_TOP_K_RERANK=20

# Optional: Default number of final results to return (default: 10)
DEFAULT_TOP_K_FINAL=10

# Optional: Whether to combine Elasticsearch and reranking scores by default (default: true)
DEFAULT_COMBINE_SCORES=true

# Optional: Default weight for Elasticsearch scores when combining (default: 0.3)
# Note: elasticsearch_weight + rerank_weight must equal 1.0
DEFAULT_ELASTICSEARCH_WEIGHT=0.3

# Optional: Default weight for reranking scores when combining (default: 0.7)
DEFAULT_RERANK_WEIGHT=0.7

# ==============================================================================
# Logging and Debug Configuration
# ==============================================================================

# Optional: Logging level (default: INFO)
# Valid values: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Optional: Enable debug mode (default: false)
DEBUG=false

# Optional: Enable detailed request/response logging (default: false)
# Warning: This may log sensitive information and affect performance
ENABLE_REQUEST_LOGGING=false

# ==============================================================================
# Performance Configuration
# ==============================================================================

# Optional: Maximum number of concurrent API requests (default: 10)
MAX_CONCURRENT_REQUESTS=10

# Optional: HTTP connection pool size (default: 20)
CONNECTION_POOL_SIZE=20

# Optional: Enable client-side rate limiting (default: true)
ENABLE_RATE_LIMITING=true

# Optional: Maximum requests per minute when rate limiting is enabled (default: 1000)
REQUESTS_PER_MINUTE=1000
